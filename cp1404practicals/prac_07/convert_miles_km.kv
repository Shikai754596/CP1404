BoxLayout:
    orientation: "vertical"
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: ''
            font_size: 48
            multiline: False
            width: 500
            size_hint_x: None
        BoxLayout:
            orientation: "vertical"
            Button:
                text: 'Up'
                on_press: app.handle_increment(float(input_number.text), 1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(float(input_number.text), -1)