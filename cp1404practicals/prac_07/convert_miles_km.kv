BoxLayout:
    orientation: "vertical"
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '34'
            font_size: 48
            multiline: False
            width: 500
            size_hint_x: None
        BoxLayout:
            orientation: "vertical"
            Button:
                text: 'Up'
                on_press: app.handle_increment(input_number.text, 1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(input_number.text, -1)
    Button:
        text: 'Convert m to km'
        on_press: app.handle_convert(float(input_number.text))
    Label:
        id: output_label
        font_size: 48